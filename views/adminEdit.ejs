<!--管理员编辑和创建题目的页面-->

<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=Edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link rel="stylesheet" href="/stylesheets/lib/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/adminEdit.css' />

    <script type="text/javascript" src="/javascripts/lib/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="/javascripts/lib/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/adminEdit.js"></script>

</head>

<body>

<!--首部导航-->
<header class="head">
    <% include adminHeader.ejs%>
</header>

<!--添加和编辑主体部分-->
<div class="container total">

    <!--这套题的主要介绍信息,包括标题,分类,得分类型,单次得分值,内容简介-->
    <div class="col-md-12 total-info">

        <!--标题-->
        <div class="form-group col-md-12">
            <label class="info-title">测评标题</label>
            <input type="text" class="form-control">
        </div>

        <!--单次得分分值-->
        <div class="form-group col-md-12">
            <label class="info-title">得分分值</label>
            <input type="number" class="form-control">
        </div>

        <!--类型-->
        <div class="col-md-12">
            <label class="info-title">测评类型</label>
            <div>
                <div class="type-item" id="character">性格测试</div>
                <div class="type-item" id="potential">潜能测试</div>
                <div class="type-item" id="emotion">情感测试</div>
                <div class="type-item" id="communication">交际测试</div>
                <div class="type-item" id="personality">人格测试</div>
            </div>
        </div>

        <!--得分类型-->
        <div class="col-md-12">
            <label class="info-title">得分类型</label>
            <div>
                <div class="type-item" id="Common">Common</div>
                <div class="type-item" id="NegaPositive">NegaPositive</div>
            </div>
        </div>

        <!--分数段设置-->
        <div class="col-md-12">
            <label class="info-title">分数段设置</label>
            <div>
                <div id="scoreHeadDiv"></div>
                <div id="scoreHeadDiv"></div>
            </div>
        </div>

        <div class="col-md-12 form-group">
            <label class="info-title">题目简介</label>
            <textarea rows="7" class="form-control" id="abstract"></textarea>
        </div>


    </div>

    <!--左部列表界面-->
    <div class="col-md-9 total-list"></div>

    <!--右边编辑区域-->
    <div class="col-md-3 total-edit"></div>

</div>

</body>