<!-- 后台管理员登录页面-->
<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=Edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link rel="stylesheet" href="/stylesheets/lib/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/course_broadcastAdmin.css' />

    <script type="text/javascript" src="/javascripts/lib/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="/javascripts/lib/mine/nojsja.js"></script>
    <script type="text/javascript" src="/javascripts/admin_signin.js"></script>

    <style type="text/css">
        /* 房间登录管理员验证页面 */
        body {
            font: 16px "Lucida Grande", Helvetica, Arial, sans-serif;
            background-color: #3b3b3b;
        }

        #total {
            padding: 2rem;
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: rgba(47, 47, 47, 0.9);
        }

        html {
            font-size: 16px;
            background-image: url("/images/error/error_bg.jpg");
            -webkit-background-origin: border-box;
            background-origin: border-box;
            background-size: cover;
            -webkit-background-clip: padding-box;
            -moz-background-clip: padding-box;
            background-clip: padding-box;

        }

        fieldset legend {
            color: white;
        }

        html {
            font-size: 12px;
        }

        a {
            color: #00B7FF;
        }
        
    </style>
</head>
<body>

<!--主要部分-->
<div id="total">

    <!--登录表单-->
    <form>
        <fieldset>
            <legend><%= title %></legend>
            <!--账户名-->
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                    </span>
                    <input type="text" class="form-control" id="account"
                           placeholder="请输入用户名">
                </div>

            </div>
            <!--密码-->
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-lock"></span>
                    </span>
                    <input type="password" class="form-control" id="password"
                           placeholder="请输入密码">
                </div>

            </div>
            <!--登录-->
            <input type="button" class="btn btn-success" id="login" value="登录">
        </fieldset>
    </form>
</div>
<%- include modalWindow.ejs%>

</body>
