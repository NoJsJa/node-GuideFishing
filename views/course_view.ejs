<!--发表贴文页-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/lib/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/post.css' />
    <!--<link rel="stylesheet" href="/stylesheets/common.css">-->

    <!--加载Uditor-->
    <script type="text/javascript" src="/Ueditor/ueditor.config.js"></script>
    <script type="text/javascript" src="/Ueditor/ueditor.all.min.js"></script>
    <script type="text/javascript" src="/Ueditor/lang/zh-cn/zh-cn.js"> </script>

    <script data-main="/javascripts/config/postConfig" src="/javascripts/lib/require.js"></script>

</head>
<body>

<!--正文-->
<div class="container total">
    <div class="row">
        <div class="col-md-2 col-md-offset-5 post-title"><%= title %></div>
    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-1 title border">标题</div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <input id="articleTitle" class="shadow" type="text" placeholder="请输入标题">
        </div>
    </div>

    <!--分类-->
    <div class="row">
        <div class="col-md-2 col-md-offset-1 title border">分类</div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 type">
            <div class="type-other">求职秘籍</div>
            <div class="type-other">职场技能</div>
            <div class="type-other">英语进阶</div>
            <div class="type-other">软件技巧</div>
            <div class="type-other">个人提升</div>

        </div>
    </div>
    <!--图片预览和视频预览,音乐预览-->
    <div class="row">
        <div class="col-md-10 col-md-offset-1 content-preview" style="display: none">
            <!--list-->
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-1 border title">简介</div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 input-group">
            <script id="editorAbstract" type="text/plain" class="shadow"></script>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-1 border title">正文</div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1 input-group">
            <script id="editorContent" type="text/plain" class="shadow"></script>
        </div>
    </div>

    <!--发表课程-->
    <div class="row">
        <div class="col-md-12" id="sendDiv">
            <button type="button" class="btn btn-default" id="sendArticle">发布 <span class="glyphicon glyphicon-send"></span></button>
        </div>
    </div>
</div>

<!--中以科创页脚-->
<%- include footer%>
<%- include modalWindow%>
</body>
</html>