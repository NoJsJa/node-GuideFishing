<!-- 页面悬浮按钮 -->
<head>
    <meta charset="UTF-8">
    <style type="text/css">

        /* 向左的箭头 */
        div.arrow-left {
            width: 0px;
            height: 0px;
            border-bottom: 1rem solid transparent;
            border-top: 1rem solid transparent;
            border-right: 1rem solid #98ccdf;
            font-size: 0px;
            line-height: 0px;
        }

        /* 向上的箭头 */
        div.arrow-top {
            width: 0px;
            height: 0px;
            border-left: 1rem solid transparent;
            border-right: 1rem solid transparent;
            border-bottom: 1rem solid #98ccdf;
            /*以下属性可以是IE5兼容*/
            font-size: 0px;
            line-height: 0px;
        }

        .hover-wrapper {
            position: fixed;
            width: 2rem;
            height: 2rem;
            bottom: 1rem;
            right: 1rem;
        }

        /* 按钮收起时显示的图片 */
        .hover-content {
            width: 100%;
            height: 100%;
            z-index: 100;
            position: relative;
        }

        /* cover */
        .hover-cover {
            z-index: 99;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            border-radius: 5px;
            background-color: rgba(152, 204, 223, 0.91);
        }
        .hover-cover:active {
            background-color: #87b6c7;
        }
        /* 返回顶部 */
        .hover-go-top{
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            position: absolute;
            z-index: 98;
        }
        /* 按钮展开 */
        .hover-go-top-show {
            -webkit-animation: goTopShow;
            -o-animation: goTopShow;
            animation: goTopShow;

            -webkit-animation-duration: 0.5s;
            -moz-animation-duration: 0.5s;
            -o-animation-duration: 0.5s;
            animation-duration: 0.5s;

            /* 动画停在终态 */
            -webkit-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
        }
        @keyframes goTopShow {
            0%{
                opacity: 0;
                top: 0;
                right: 0;
            }
            100%{
                opacity: 1;
                top: -2rem;
                right: 0;
            }
        }
        /* 按钮收起s */
        .hover-go-top-hidden {
            -webkit-animation: goTopHidden;
            -o-animation: goTopHidden;
            animation: goTopHidden;

            -webkit-animation-duration: 0.5s;
            -moz-animation-duration: 0.5s;
            -o-animation-duration: 0.5s;
            animation-duration: 0.5s;

            /* 动画停在终态 */
            -webkit-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
        }
        @keyframes goTopHidden {
            0%{
                opacity: 1;
                top: -2rem;
            }
            100%{
                opacity: 0;
                top: 0;
            }
        }

        /* 返回前一页 */
        .hover-return-history {
            top: 0;
            left: 0;
            z-index: 98;
            width: 100%;
            height: 100%;
            opacity: 0;
            position: absolute;
        }
        /* 按钮展开 */
        .hover-return-history-show {
            -webkit-animation: returnHistoryShow;
            -o-animation:returnHistoryShow;
            animation: returnHistoryShow;

            -webkit-animation-duration: 0.5s;
            -moz-animation-duration: 0.5s;
            -o-animation-duration: 0.5s;
            animation-duration: 0.5s;

            /* 动画停在终态 */
            -webkit-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
        }
        @keyframes returnHistoryShow {

            0%{
                opacity: 0;
                top: 0;
                left: 0;
            }
            100%{
                opacity: 1;
                top: 0;
                left: -2rem;
            }
        }
        /* 按钮收起 */
        .hover-return-history-hidden {
            -webkit-animation: returnHistoryHidden;
            -o-animation: returnHistoryHidden;
            animation: returnHistoryHidden;

            -webkit-animation-duration: 0.5s;
            -moz-animation-duration: 0.5s;
            -o-animation-duration: 0.5s;
            animation-duration: 0.5s;

            /* 动画停在终态 */
            -webkit-animation-fill-mode: forwards;
            -moz-animation-fill-mode: forwards;
            -o-animation-fill-mode: forwards;
            animation-fill-mode: forwards;
        }
        @keyframes returnHistoryHidden {
            0%{
                opacity: 1;
                top: 0;
                left: -2rem;
            }
            100%{
                opacity: 0;
                top: 0;
                left: 0;
            }
        }
    </style>
    <!--脚本-->
    <script type="text/javascript">

        /* 页面载入完成 */
        window.onload = function () {
            var isClick = false;
            var hoverArea = document.getElementById('hoverArea');
            var goTop = document.getElementById('goTop');
            var returnHistory = document.getElementById('returnHistory');

            // 鼠标放上去
            hoverArea.onclick = function () {
                isClick = !isClick;
                if(isClick){
                    goTop.setAttribute('class',"hover-go-top hover-go-top-show");
                    returnHistory.setAttribute('class',"hover-return-history hover-return-history-show");
                }else {
                    goTop.setAttribute('class', "hover-go-top hover-go-top-hidden");
                    returnHistory.setAttribute('class', "hover-return-history hover-return-history-hidden");
                }
            };

            goTop.onclick = function () {
                scrollTo(0, 0);
            };
            returnHistory.onclick = function (){
                window.history.go(-1);
            };
        };

    </script>
