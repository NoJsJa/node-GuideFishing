<!--testView-->
<!--用户完成测试题目的界面-->

<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=Edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link rel="stylesheet" href="/stylesheets/lib/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/test_view.css' />

    <script type="text/javascript" src="/javascripts/lib/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="/javascripts/lib/mine/nojsja.js"></script>
    <script type="text/javascript" src="/javascripts/lib/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/test_view.js"></script>
</head>
<body>
<header class="header">
    <div class="header-label">
        测试开始
        <a href="/test/index"><span class="glyphicon glyphicon-home return-home"></span></a>
    </div>
</header>

<!--评测集合主体-->
<div class="container total">
    <div class="test-title"><%= testTitle %></div>
    <div class="test-type"><%= testType %></div>
    <!--测评题目操作区域-->
    <div id="totalItems">
        <div class="item-number"></div>
        <div class="item-title"></div>
        <div class="item-choises">
            <!--<div class="choise" id="A">A.完全符合</div>
            <div class="choise" id="B">B.基本符合</div>
            <div class="choise" id="C">A.完全不符</div>-->
        </div>
    </div>
</div>

<!--提交按钮-->
<div id="nextDiv">
    <input type="button" class="btn btn-default" id="last" value="上一道">
    <input type="button" class="btn btn-default" id="next" value="下一道">
</div>
<div id="submitDiv">
    <div id="submit">提交</div>
</div>

<script type="text/javascript">

    TestViewAction.action = '<%= action %>';
    TestViewAction.testType = '<%= testType %>';
    TestViewAction.testTitle = '<%= testTitle %>';

</script>

<!--查阅状态下显示-->
<% if(action == 'view') { %>

<!--相关课程推荐-->
<div class="course-recommendation-div">
    <div class="recommendation-title">
        -- 课程推荐 --
    </div>
    <!--列表-->
    <div class="recommendation-list">

        <!--<div class="recommendation-item">-->
        <!--<span>1</span>-->
        <!--<a href="jobFound/skill" class="recommendation-item-title">Node.js入门指导</a>-->
        <!--<div class="recommendation-item-type">职业技能</div>-->
        <!--</div>-->

    </div>
</div>

<% } %>

<!--审查状态下显示-->
<% if(action == 'examine') { %>

<div class="course-examine-div">
    <input type="text" class="form-control" id="examineText" placeholder="请填入审核备注">
    <input type="button" class="btn btn-default btn-sm" id="examineReject" status="reject" value="审核失败">
    <input type="button" class="btn btn-success btn-sm" id="examinePass" status="pass" value="审核通过">
</div>

<% } %>


<!--底部导航-->
<%- include footer.ejs %>
<!--引入模态弹窗-->
<%- include modalWindow.ejs %>
<!--悬浮按钮-->
<%- include hoverButton.ejs %>


</body>

</html>