</head>

<body>

<%- include admin_header.ejs %>

<!--内容部分-->
<div>

    <fieldset class="fieldset-selfinfo">
        <legend>
            <span>个人资料</span>
            <i class="icon-flag"></i>
        </legend>
        <!--个人信息-->
        <div class="selfinfo-wrapper">
            <!--昵称-->
            <div class="selfinfo-title">
                <i class="icon-user"></i>
                <span>账户昵称</span>
            </div>
            <div class="selfinfo-detail"><%= nickName %></div>
            <div class="selfinfo-title">
                <i class="icon-envelope-alt"></i>
                <span>账户邮箱</span>
            </div>
            <!--账户-->
            <div class="selfinfo-detail"><%= account %></div>
            <div class="selfinfo-title">
                <i class="icon-key"></i>
                <span>账户级别</span>
            </div>
            <!--级别-->
            <div class="selfinfo-detail"><%= rank %></div>
            <div class="selfinfo-title">
                <i class="icon-pencil"></i>
                <span>审查类型</span>
            </div>
            <!--审查类型-->
            <div class="selfinfo-detail"><%= examineType %></div>
        </div>
    </fieldset>

    <!--------------------0级权限管理区域------------------------>

    <% if (rank == 0) { %>

