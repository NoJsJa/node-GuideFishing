        <legend>
            <span>权限管理</span>
            <i class="icon-flag"></i>
        </legend>
        <!--权限管理-->
        <div class="manage-wrapper">
            <!--搜索-->
            <div class="manage-search">
                <input type="text" id="accountText" placeholder="输入账户名...">
                <input type="button" class="btn btn-default btn-sm" value="搜索" id="searchAccount" target="accountText">
