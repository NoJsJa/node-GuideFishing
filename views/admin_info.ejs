<script>

    AdminInfoAction.admin = {};
    /* 绑定属性 */
    AdminInfoAction.admin["account"] = '<%= account %>';
    AdminInfoAction.admin["nickName"] = '<%= nickName %>';
    AdminInfoAction.admin["rank"] = '<%= rank %>';
    AdminInfoAction.admin["examineType"] = '<%= examineType %>';

</script>
</html>